<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <button
      type="button"
      class="btn btn-primary btn-circle"
      data-toggle="modal"
      data-target="#addModal"
    >
      <i class="fas fa-plus"></i>
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Title</th>
            <th>Detail</th>
            <th>Image</th>
            <th>Github</th>
            <th>External</th>
            <th>Action</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>No</th>
            <th>Title</th>
            <th>Detail</th>
            <th>Image</th>
            <th>Github</th>
            <th>External</th>
            <th>Action</th>
          </tr>
        </tfoot>
        <tbody>
          <% project.forEach((res, line) => { %>
          <tr>
            <td><%= line+1 %></td>
            <td><%= res.title %></td>
            <td><%= res.detail %></td>
            <td>
              <img
                src="/<%= res.imageUrl %>"
                alt="project"
                style="width: 300px; height: 300px; object-fit: cover"
              />
            </td>
            <td><%= res.github %></td>
            <td><%= res.external %></td>
            <td>
              <a
                href="javascript:void()"
                class="btn btn-warning btn-sm btn-circle button-update"
                data-id="<%= res.id %>"
                data-title="<%= res.title %>"
                data-detail="<%= res.detail %>"
                data-image="<%= res.image %>"
                data-github="<%= res.github %>"
                data-external="<%= res.external %>"
                ><i class="fas fa-edit"></i
              ></a>
              <a
                href="javascript:void()"
                class="btn btn-danger btn-sm btn-circle button-delete"
                data-id="<%= res.id %>"
                ><i class="fas fa-trash"></i
              ></a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
